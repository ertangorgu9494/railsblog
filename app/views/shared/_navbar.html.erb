<style>
  ul.navbar-nav { line-height: 50px; }
  ul.navbar-nav button { margin-left: 7px; margin-right: 7px; }
  
  .navbar-header a,
  ul.navbar-nav a { text-decoration: none; }
</style>

<nav class="navbar navbar-inverse navbar-default navbar-static-top">
    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            <%=link_to t('home'), posts_path, class:"navbar-brand"%>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li><a href="#">Herhangi Birşey</a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                        Dil Seçiniz <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            <%= link_to_unless_current "İngilizce", locale: "en" %>
                        </li>
                        <li>
                            <%= link_to_unless_current "Türkçe", locale: "tr" %>
                        </li>
                    </ul>
                </li>
            </ul>
                
            <ul class="nav navbar-nav navbar-right">
                <% if user_signed_in? %>
                    <li>
                        <%= link_to 'Yeni', new_post_path, class:"glyphicon glyphicon-plus" %>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <em><%=image_tag current_user.image.url(:mini) if current_user.image?%></em>
                            <%=current_user.name%> <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><%= link_to t('settings'), edit_user_registration_path%></li>
                            <li><%= link_to t('exit'), destroy_user_session_path, :method => :delete %></li>
                        </ul>
                    </li>

                <% else %>
                    
                    <li>
                      <button type="button" class="btn btn-success btn-sm" onclick="location.href='<%= new_user_session_path %>'">
                        <%= t('signin') %>
                      </button>
                    </li>
                    
                    <li>
                      <button type="button" class="btn btn-primary btn-sm" onclick="location.href='<%= new_user_registration_path %>'">
                        <%= t('signup') %>
                      </button>
                    </li>

                <% end %>
            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container-fluid -->
</nav>
